<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="209dp"
            android:background="@android:color/darker_gray">
            <com.example.huyuxuan.lora2.RoundImageView
                android:id="@+id/main_roundImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:src="@drawable/default_avatar"/>

            <Button
                android:id="@+id/btnProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_roundImage"
                android:layout_toEndOf="@+id/main_roundImage"
                android:text="profile" />

            <Button
                android:id="@+id/btnHomeToRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_roundImage"
                android:layout_toStartOf="@+id/main_roundImage"
                android:text="@string/register" />

        </RelativeLayout>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/colorPressedHighlight"
            android:text="查看資料"
            android:textAlignment="center"
            android:textSize="24sp" />

        <ListView
            android:id="@+id/home_listview"
            android:layout_width="match_parent"
            android:layout_height="264dp" />

    </LinearLayout>
</ScrollView>