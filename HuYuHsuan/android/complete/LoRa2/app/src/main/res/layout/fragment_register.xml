<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收件者"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/spinnerReceiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="寄件地"
        android:textSize="18sp"
        android:layout_below="@+id/spinnerReceiver"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/spinnerStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerReceiver"
        android:layout_alignStart="@+id/spinnerReceiver" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spinnerStart"
        android:text="收件地"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/spinnerDes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerStart"
        android:layout_alignStart="@+id/spinnerStart" />

    <Button
        android:id="@+id/btnRegisterOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="確定"
        android:layout_marginTop="90dp"
        android:layout_below="@+id/textView16"
        android:layout_alignEnd="@+id/spinnerDes" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="預約時段"
        android:textSize="18sp"
        android:layout_below="@+id/spinnerDes"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnSelectTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnRegisterOk"
        android:layout_below="@+id/textView15"
        android:text="選時段" />
</RelativeLayout>